<%= form_tag books_path, method: :get do %>
  <div class= "col-md-4">
    <%= text_field_tag :search, params[:search], class: "search-form",
      placeholder: t("book.search_book") %>
  </div>
  <div class= "col-md-4">
    <%= select_tag t("book.category"),
      options_for_select(@categories.map{|f| [f.name, f.id]}),
      class: "select", include_blank: t("book.all") %> 
  </div>
  <div class= "col-md-2">
    <%= submit_tag t "book.search", class: "btn btn-primary" %>
  </div>
<% end %>
