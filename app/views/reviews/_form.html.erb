<%= form_for [@book, @review] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :rate %>
  <%= f.text_field :rate, class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.submit t("review.submit"), class: "btn btn-primary" %>
<% end %>
