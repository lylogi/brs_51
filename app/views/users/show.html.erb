<% provide :title, @user.name %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <div class="col-md-8">
      <h3><%= t("favorite.favorites")%> (<%= @user.favorites.count %>)</h3>
      <% if @user.favorites.any? %>
        <ol class="@favorites">
          <%= render @favorites %>
        </ol>
        <%= will_paginate @favorites %>
      <% end %>
    </div>
  </div>
</div>
