<header class="navbar navbar-fixed-top">
  <div class="container">
    <%= link_to t("layouts.logo"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to image_tag("icon_search.png"), "#" %></li>
        <li><%= link_to t("layouts.home"), "#" %></li>
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("app.requests"), admin_requests_path %></li>
          <% else %>
            <li><%= link_to t("layouts.user"), users_path %></li>
            <li><%= link_to t("layouts.book"), books_path %></li>
            <li><%= link_to t("layouts.request"), requests_path %></li>
          <% end %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= t("layouts.acount") %>
              <b class= "caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t(".profile"), current_user %></li>
              <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t(".log_out"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
